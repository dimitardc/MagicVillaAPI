@model IEnumerable<MagicVilla_Web.Models.Dto.VillaNumberDTO>

<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Villa Number List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i>Create New Villa Number</a>
		</div>
	</div>


	<table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Number
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Villa.Name</td>
					<td>@item.VillaNo</td>
					<td class="text-center">
						<a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-success">UpdateVilla</a>
						<a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-danger">Delete Villa</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>